<body>
  <div class="wrap">
    <div class="panel" id="panel">
      <div class="row header">
        <div class="title">میکس موڈز 1</div>
      </div>

      <div class="row">
        <div class="option-label">میکس بائی پاس</div>
        <div class="radio" data-key="bypass" title="میکس بائی پاس">
          <div class="dot"></div>
        </div>
      </div>

      <div class="row">
        <div class="option-label">وِنگو ہیک</div>
        <div class="radio" data-key="wingo" title="ونگو ہیک">
          <div class="dot"></div>
        </div>
      </div>

      <div class="row">
        <div class="status-label">حیثیت: <span id="statusText">آف لائن</span></div>
      </div>

      <div class="row">
        <div class="device">OPPO CPH1989</div>
      </div>

      <div class="row" style="border-bottom:none;padding-bottom:10px;">
        <div style="font-size:15px;color:var(--accent-cyan)">ڈیوائس ورژن: 11</div>
      </div>

      <div class="controls" style="padding:14px;">
        <button class="btn" id="hackBtn">ہیک چلائیں</button>
        <button class="btn secondary" id="toggleStatus">آن/آف کریں</button>
        <button class="btn danger" id="exitBtn">باہر نکلیں</button>
      </div>

      <div style="display:flex;gap:10px;padding:12px;">
        <button class="btn secondary" id="hideBtn">چھپائیں</button>
        <div style="flex:1"></div>
      </div>
    </div>
  </div>

  <!-- Progress overlay -->
  <div class="overlay" id="overlay">
    <div class="modal">
      <div style="font-weight:800;color:var(--accent-magenta);font-size:20px" id="modalTitle">عمل جاری ہے</div>
      <div class="small" id="modalSub">درخواست بھیجی جا رہی ہے — براہِ مہربانی انتظار کریں</div>
      <div class="progress"><i id="progBar"></i></div>
      <div style="display:flex;gap:8px;margin-top:12px;">
        <button class="btn" id="cancelHack">منسوخ کریں</button>
        <button class="btn secondary" id="finishHack" style="display:none;">ختم کریں</button>
      </div>
    </div>
  </div>

  <script>
    // Small interactive logic
    (function(){
      const radios = document.querySelectorAll('.radio');
      const statusText = document.getElementById('statusText');
      const toggleStatus = document.getElementById('toggleStatus');
      const hackBtn = document.getElementById('hackBtn');
      const overlay = document.getElementById('overlay');
      const progBar = document.getElementById('progBar');
      const cancelHack = document.getElementById('cancelHack');
      const finishHack = document.getElementById('finishHack');
      const exitBtn = document.getElementById('exitBtn');
      const hideBtn = document.getElementById('hideBtn');
      let statusOnline = false;
      let hackInterval = null;

      // Toggle radio state
      radios.forEach(r=>{
        r.addEventListener('click', ()=>{
          r.classList.toggle('on');
        });
      });

      // Toggle status (online/offline)
      toggleStatus.addEventListener('click', ()=>{
        statusOnline = !statusOnline;
        statusText.textContent = statusOnline ? 'آن لائن' : 'آف لائن';
        // tiny visual cue
        statusText.style.color = statusOnline ? 'var(--accent-cyan)' : 'var(--accent-magenta)';
      });

      // Start fake hack
      hackBtn.addEventListener('click', ()=>{
        overlay.classList.add('show');
        progBar.style.width = '0%';
        document.getElementById('modalTitle').textContent = 'ہیک چل رہا ہے';
        document.getElementById('modalSub').textContent = 'یہ محض مظاہرہ ہے — اصلی ہیکنگ نقصان دہ/غیرقانونی ہو سکتی ہے';
        cancelHack.style.display = '';
        finishHack.style.display = 'none';

        let p = 0;
        hackInterval = setInterval(()=>{
          p += Math.random()*12 + 6; // advance randomly
          if(p >= 100){
            p = 100;
            progBar.style.width = p + '%';
            clearInterval(hackInterval);
            hackInterval = null;
            document.getElementById('modalTitle').textContent = 'کامیابی';
            document.getElementById('modalSub').textContent = 'عمل مکمل ہو گیا۔';
            cancelHack.style.display = 'none';
            finishHack.style.display = '';
          } else {
            progBar.style.width = p + '%';
          }
        }, 450);
      });

      // Cancel / finish handlers
      cancelHack.addEventListener('click', ()=>{
        if(hackInterval) clearInterval(hackInterval);
        hackInterval = null;
        overlay.classList.remove('show');
      });
      finishHack.addEventListener('click', ()=>{
        overlay.classList.remove('show');
      });

      // Hide panel (simple)
      hideBtn.addEventListener('click', ()=>{
        document.getElementById('panel').style.opacity = 0.06;
        document.getElementById('panel').style.pointerEvents = 'none';
      });

      // Exit (simulate)
      exitBtn.addEventListener('click', ()=>{
        // Tiny confirmation
        if(confirm('کیا آپ واقعی باہر نکلنا چاہتے ہیں؟')){
          // simulate "exit" by removing panel
          document.getElementById('panel').remove();
          const msg = document.createElement('div');
          msg.style.color = '#bfcfcf';
          msg.style.margin = '20px';
          msg.style.fontSize = '16px';
          msg.textContent = 'پینل بند کر دیا گیا۔ ویب صفحہ کا بقیہ حصہ دستیاب ہے۔';
          document.querySelector('.wrap').appendChild(msg);
        }
      });

      // Accessibility: press Esc to close overlay
      document.addEventListener('keydown', (e)=>{
        if(e.key === 'Escape' && overlay.classList.contains('show')){
          if(hackInterval) clearInterval(hackInterval);
          hackInterval = null;
          overlay.classList.remove('show');
        }
      });

      // Small: make sure CSS custom props are available in JS (for inline color toggles)
      const root = getComputedStyle(document.documentElement);
      // (no further action needed)
    })();
  </script>
</body>
</html>
