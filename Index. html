    /* --- Panel --- */
    .panel{
      width:var(--panel-w);
      background:rgba(0,0,0,0.6);
      border-radius:14px;
      border:3px solid var(--panel-border);
      box-shadow:0 8px 30px rgba(0,0,0,0.8), 0 0 18px rgba(0,255,255,0.03) inset;
      overflow:hidden;
      direction:rtl;
    }
    .panel .row{padding:16px var(--rtl-pad);display:flex;align-items:center;gap:12px;border-bottom:2px solid rgba(255,255,255,0.03);}
    .panel .row.header{justify-content:center;padding-top:22px;padding-bottom:14px;}
    .title{font-size:30px;font-weight:700;color:var(--accent-magenta);text-shadow:0 2px 6px rgba(255,0,200,0.08);}
    .divider{height:2px;background:transparent;}
    /* --- Option rows --- */
    .option-label{flex:1;font-size:22px;color:var(--accent-magenta);font-weight:600;}
    .radio{
      width:36px;height:36px;border-radius:50%;
