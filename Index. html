    /* --- Buttons row --- */
    .controls{display:flex;gap:10px;padding:12px;justify-content:space-between;}
    .btn{flex:1;padding:10px 12px;border-radius:8px;border:2px solid rgba(255,255,255,0.06);background:linear-gradient(180deg, rgba(255,255,255,0.02), transparent);color:var(--accent-magenta);font-weight:700;cursor:pointer;}
